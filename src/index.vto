---
layout: layouts/base.vto
---

<h1 class="sr-only">GBCam</h1>

<video id="videoFeed" autoplay playsinline muted></video>
<div class="canvas">
  <canvas id="glcanvas" width="128" height="112"></canvas>
</div>

<div class="controls">
  <button id="settingsBtn" title="Settings">âš™ï¸</button>
  <button id="captureBtn" title="Capture PNG">ğŸ“¸</button>
  <button id="recordGifBtn" title="Record GIF">ğŸ”´</button>
</div>
<dialog id="captureDialog">
  <img id="captureImg" alt="Captured image" />
  <div style="text-align: center; margin-top: 0.5rem">
    <a id="downloadLink" download="gbcam.png" title="Download PNG"
    >Download PNG</a>
    <button id="closeDialog" style="margin-left: 1rem" title="Close">âŒ</button>
  </div>
</dialog>
<dialog id="gifDialog">
  <img
    id="gifImg"
    alt="Recorded GIF"
    style="width: 100%; height: auto; image-rendering: pixelated; display: block"
  />
  <div style="text-align: center; margin-top: 0.5rem">
    <a id="downloadGifLink" download="gbcam.gif" title="Download GIF"
    >Download GIF</a>
    <button id="closeGifDialog" style="margin-left: 1rem" title="Close">
      âŒ
    </button>
  </div>
</dialog>
<dialog id="settingsDialog">
  <form method="dialog" class="settingDialogContent">
    <label>Camera
      <select id="cameraSelect"></select>
    </label>
    <label>Brightness
      <input
        type="range"
        id="brightness"
        min="-1"
        max="1"
        step="0.01"
        value="0"
      />
    </label>
    <label>Contrast
      <input type="range" id="contrast" min="0" max="3" step="0.01" value="1" />
    </label>
    <label>Palette
      <select id="palette">
        <!-- options will be populated from presets.json -->
      </select>
    </label>
    <label>Dithering
      <input type="checkbox" id="dither" checked />
    </label>
    <label>Echo
      <select id="echoMode">
        <option value="off">Disabled</option>
        <option value="before">Before Dithering</option>
        <option value="after" selected>After Dithering (default)</option>
      </select>
    </label>
    <label>Echo Strength
      <input
        type="range"
        id="echoDecay"
        min="0"
        max="1"
        step="0.01"
        value="0.3"
      />
    </label>
    <label>GIF Length
      <span><input
          type="number"
          id="gifDuration"
          min="1"
          max="30"
          step="1"
          value="5"
          style="width: 4rem"
        /> s</span>
    </label>
    <button id="closeSettingsDialog" style="margin-top: 1rem">Close</button>
  </form>
</dialog>

<script src="https://cdn.jsdelivr.net/npm/gif.js@0.2.0/dist/gif.js"></script>
<script type="module" src="index.js"></script>
